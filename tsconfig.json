{
  "compilerOptions": {
    "target": "es2016",          
    "module": "commonjs",                     
    "rootDir": "./",    
    "outDir": "./dist",   
    "baseUrl": "./src",     
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"],
      "@errors/*": ["errors/*"],
      "@utils/*": ["utils/*"]
    }, 
    "esModuleInterop": true,  
    "experimentalDecorators": true,                  
    "emitDecoratorMetadata": true,        
    "resolveJsonModule": true,  
    "forceConsistentCasingInFileNames": true,  
    "strict": false,            
    "strictPropertyInitialization": false,  
    "skipLibCheck": true               
  }
}
